<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>index</servlet-name>
        <servlet-class>mate.academy.internetshop.controllers.IndexController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>allUsers</servlet-name>
        <servlet-class>mate.academy.internetshop.controllers.users.GetAllUsersController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>allUsers</servlet-name>
        <url-pattern>/users/all</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>registration</servlet-name>
        <servlet-class>mate.academy.internetshop.controllers.users.RegistrationController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>registration</servlet-name>
        <url-pattern>/users/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteUser</servlet-name>
        <servlet-class>mate.academy.internetshop.controllers.users.DeleteUserController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteUser</servlet-name>
        <url-pattern>/deleteUser</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addProduct</servlet-name>
        <servlet-class>mate.academy.internetshop.controllers.products.AddProductController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addProduct</servlet-name>
        <url-pattern>/products/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>allProducts</servlet-name>
        <servlet-class>mate.academy.internetshop.controllers.products.GetAllProductsToEditController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>allProducts</servlet-name>
        <url-pattern>/products/all</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>showBucket</servlet-name>
        <servlet-class>mate.academy.internetshop.controllers.bucket.GetBucketController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>showBucket</servlet-name>
        <url-pattern>/bucket/show</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteProductFromBucket</servlet-name>
        <servlet-class>mate.academy.internetshop.controllers.bucket.DeleteProductFromBucketController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteProductFromBucket</servlet-name>
        <url-pattern>/deleteProductFromBucket</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>orderNew</servlet-name>
        <servlet-class>mate.academy.internetshop.controllers.order.AddOrderController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>orderNew</servlet-name>
        <url-pattern>/order/new</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>allOrders</servlet-name>
        <servlet-class>mate.academy.internetshop.controllers.order.GetAllOrdersController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>allOrders</servlet-name>
        <url-pattern>/order/all</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>orderShow</servlet-name>
        <servlet-class>mate.academy.internetshop.controllers.order.GetOrderController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>orderShow</servlet-name>
        <url-pattern>/order/show</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>orderDelete</servlet-name>
        <servlet-class>mate.academy.internetshop.controllers.order.DeleteOrderController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>orderDelete</servlet-name>
        <url-pattern>/order/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>productDelete</servlet-name>
        <servlet-class>mate.academy.internetshop.controllers.products.DeleteProductController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>productDelete</servlet-name>
        <url-pattern>/products/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>productBuy</servlet-name>
        <servlet-class>mate.academy.internetshop.controllers.bucket.AddProductToBucketController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>productBuy</servlet-name>
        <url-pattern>/productBuy</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>getProductsFromBucket</servlet-name>
        <servlet-class>mate.academy.internetshop.controllers.bucket.GetAllProductsToBuyController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getProductsFromBucket</servlet-name>
        <url-pattern>/products/buy</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>mate.academy.internetshop.controllers.users.LoginController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>authenticationFilter</filter-name>
        <filter-class>mate.academy.internetshop.web.filters.AuthenticationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>authenticationFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

</web-app>
