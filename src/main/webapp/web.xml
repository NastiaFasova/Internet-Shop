<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>index</servlet-name>
        <servlet-class>mate.academy.internetshop.controllers.IndexController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>allUsers</servlet-name>
        <servlet-class>mate.academy.internetshop.controllers.GetUsersController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>allUsers</servlet-name>
        <url-pattern>/users/all</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>registration</servlet-name>
        <servlet-class>mate.academy.internetshop.controllers.RegistrationController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>registration</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleting</servlet-name>
        <servlet-class>mate.academy.internetshop.controllers.DeleteUsersController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleting</servlet-name>
        <url-pattern>/users/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addProduct</servlet-name>
        <servlet-class>mate.academy.internetshop.controllers.AddProductController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addProduct</servlet-name>
        <url-pattern>/addProduct</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>getAllProducts</servlet-name>
        <servlet-class>mate.academy.internetshop.controllers.GetProductsController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getAllProducts</servlet-name>
        <url-pattern>/products/all</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addProductToBucket</servlet-name>
        <servlet-class>mate.academy.internetshop.controllers.AddProductToBucketController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addProductToBucket</servlet-name>
        <url-pattern>/addProductToBucket</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>showBucket</servlet-name>
        <servlet-class>mate.academy.internetshop.controllers.GetBucketController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>showBucket</servlet-name>
        <url-pattern>/buckets/all</url-pattern>
    </servlet-mapping>

</web-app>
